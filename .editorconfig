# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,js,pi,html,scss,json}]
indent_size = 4

[*.{yml,json,coffee}]
indent_size = 2

[{package.json,bower.json,config.js,yarn.lock,.eslintrc,.bowerrc,.babelrc,.htaccess}]
indent_size = 2
