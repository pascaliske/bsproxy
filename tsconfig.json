{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "es2017.object",
      "dom"
    ],
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "./typings",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
